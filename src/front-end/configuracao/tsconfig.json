{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/componentes/*": ["../componentes/*"],
      "@/paginas/*": ["../paginas/*"],
      "@/estilos/*": ["../estilos/*"],
      "@/hooks/*": ["../hooks/*"],
      "@/utils/*": ["../utils/*"],
      "@/configuracao/*": ["../configuracao/*"]
    }
  },
  "include": ["../**/*.ts", "../**/*.tsx"],
  "exclude": ["node_modules"]
}